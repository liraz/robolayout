<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        layout_width="match_parent"
        layout_height="wrap_content"
        layout_margin="10">
    <TextView
            id="title"
            layout_width="match_parent"
            layout_height="wrap_content"
            layout_alignParentTop="true"
            gravity="top|left"
            lines="1"
            font="Helvetica-Bold"/>
    <TextView
            id="description"
            layout_width="match_parent"
            layout_height="wrap_content"
            layout_below="title"
            layout_marginTop="10"
            gravity="top|left"
            lines="0"/>
</RelativeLayout>